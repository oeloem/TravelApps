<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
     android:layout_width="match_parent">

    <item android:state_pressed="true">

        <shape>
                <gradient
                    android:startColor="#fcede3"
                    android:endColor="#fcede3"
                    android:angle="270" />

            <stroke
                android:width="0dp"
                android:color="#edeff2" />

            <corners
                android:radius="5dp"/>

            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />

        </shape>
    </item>
    <item>

        <shape>

            <gradient
                android:angle="270"
                android:startColor="#fcede3"
                android:centerColor="#fbd298"
                android:endColor="#fbd298"/>

            <corners
                android:radius="5dp"/>

            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />

        </shape>
    </item>

</selector>